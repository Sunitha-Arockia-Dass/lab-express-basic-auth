{{! views/auth/signup.hbs }}

<div id="form">
  <h2>Signup</h2>
  <form action="/signup" method="POST">

    <label>
      Username
      <input type="text" name="username" placeholder="ironhacker" required/>
    </label>

    <label>
      Password
      <input type="password" name="password" placeholder="********" required/>
    </label>

    <button type="submit">Create account</button>

    {{! error message will be added here }}
    {{#if userInLogin}}

<h1>{{errorMessage}}</h1>

    {{/if}}
    {{#if userInDb}}

<h1>{{errorMessage}}</h1>

    {{/if}}
  </form>
</div>